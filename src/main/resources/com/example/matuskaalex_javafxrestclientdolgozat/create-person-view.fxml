<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="20.0" prefHeight="480.0" prefWidth="640.0" vgap="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.matuskaalex_javafxrestclientdolgozat.CreatePersonController">
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" minWidth="75.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" />
        <RowConstraints minHeight="10.0" />
        <RowConstraints minHeight="10.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints minHeight="10.0" valignment="TOP" vgrow="SOMETIMES" />
    </rowConstraints>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Nev" />
        <Label text="Minosites" GridPane.rowIndex="1" />
        <Label text="Kor" GridPane.rowIndex="2" />
        <TextField fx:id="textFieldName" GridPane.columnIndex="1" />
        <TextField fx:id="textFieldMinosites" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Spinner fx:id="spinnerAge" maxWidth="100000.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button fx:id="buttonSubmit" mnemonicParsing="false" onAction="#submitClick" prefWidth="100000.0" text="Felvesz a csaladba" GridPane.columnSpan="2" GridPane.rowIndex="5" />
      <CheckBox fx:id="checkBox" mnemonicParsing="false" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="CENTER" />
      <Label text="8 Altalanos" GridPane.rowIndex="4" />
      <Label text="Meret" GridPane.rowIndex="3" />
      <TextField fx:id="textFieldMeret" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    </children>
</GridPane>
